@model List<Libro>

@if (Model != null)
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (Libro mislibros in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="~/images/@mislibros.Portada" style="width:200px;height:200px">
                    <div class="card-body">
                        <a asp-controller="Libros" asp-action="DetailsLibro" asp-route-idlibro="@mislibros.IdLibro">@mislibros.Titulo</a>
                    </div>
                </div>
            </div>
        }
    </div>
}